[gitflow "branch"]
	master = master
	develop = develop
[gitflow "prefix"]
  feature = feature/
  release = release/
  hotfix = hotfix/
  support = support/
  versiontag = v
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
  # gpgsign = true
[remote "origin"]
	fetch = +refs/pull/*/head:refs/remotes/origin/pr/*
